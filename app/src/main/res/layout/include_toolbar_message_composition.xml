<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/abc_action_bar_default_height_material"
    style="@style/AppTheme.Toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_rippleDuration="200"
            app:rv_color="@color/ripple_material_light"
            app:rv_centered="true"
            android:layout_marginStart="@dimen/toolbar_button_horizontal_margin"
            android:layout_marginEnd="@dimen/toolbar_button_horizontal_margin"
            android:layout_marginLeft="@dimen/toolbar_button_horizontal_margin"
            android:layout_marginRight="@dimen/toolbar_button_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/action_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_send"
                android:background="@null"
                android:hapticFeedbackEnabled="true"
                style="@style/AppTheme.TextButton"/>
        </com.andexert.library.RippleView>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>