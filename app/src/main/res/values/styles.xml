<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/material_deep_purple_900</item>
        <item name="colorPrimary">@color/material_purple_900</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowBackground">@color/material_grey_300</item>
        <item name="colorAccent">@color/material_purple_900</item>
    </style>

    <style name="AppTheme.ClearBackground" parent="AppTheme">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NavigationDrawerEntryText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/navigation_drawer_entry_text</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:background">@color/material_deep_purple_900</item>
    </style>

    <style name="AppTheme.UserNameText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/user_name_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TagGroupTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/tag_group_title</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.UserNameText.ProvisionActivity" parent="AppTheme.UserNameText">
        <item name="android:textColor">@color/material_indigo_500</item>
    </style>

    <style name="AppTheme.WelcomeProvideNameText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/user_name_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TagName" parent="card.header_outer_layout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/tag_name_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.InformativeText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/informative_text</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.CheckBoxText">
        <item name="android:textColor">@color/material_purple_900</item>
        <item name="android:textSize">@dimen/supplementary_text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TextButton">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <style name="AppTheme.MessageBody">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/message_body_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="AppTheme.AttachmentName" parent="AppTheme.TagName">
        <item name="android:textColor">@color/material_blue_900</item>
        <item name="android:textSize">@dimen/tag_name_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.SenderGeneratedLetter">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.SenderText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
